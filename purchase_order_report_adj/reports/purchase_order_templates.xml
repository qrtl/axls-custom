<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="report_purchaseorder_document_adj"
        inherit_id="purchase.report_purchaseorder_document"
    >
        <xpath expr="//div[@t-if='o.partner_ref']" position="after">
            <div t-if="o.payment_term_id" class="col-3 bm-2">
                <strong>Payment Term:</strong>
                <p t-field="o.payment_term_id" class="m-0" />
            </div>
        </xpath>
        <xpath expr="//th[@name='th_description']" position="before">
            <th name="th_line_no" class="text-center">
                <span><strong>No.</strong></span>
            </th>
        </xpath>
        <xpath expr="//td[@id='product']" position="before">
            <td style="text-align: center !important">
                <span t-esc="line_index + 1" />
            </td>
        </xpath>
        <xpath expr="//th[@name='th_taxes']" position="attributes">
            <attribute name="t-att-style">'display: none'</attribute>
        </xpath>
        <xpath expr="//td[@name='td_taxes']" position="attributes">
            <attribute name="t-att-style">'display: none'</attribute>
        </xpath>
    </template>
</odoo>
